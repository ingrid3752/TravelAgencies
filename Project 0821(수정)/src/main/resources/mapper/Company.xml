<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CompanyMapper">

    <select id="check" parameterType="String" resultType="Company">
        SELECT * FROM company WHERE com_id = #{com_id}
    </select>
    
    <select id="login" parameterType="Company" resultType="Company">
        SELECT * FROM company WHERE com_id = #{com_id} AND com_password = #{com_password}
    </select>

    <update id="update" parameterType="Company">
        UPDATE company
        SET
        com_id=#{com_id}, com_password=#{com_password},
        com_name=#{com_name}, com_phone=#{com_phone}
        WHERE com_code = #{com_code}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM company
        WHERE com_code = #{com_code}
    </delete>

</mapper>
