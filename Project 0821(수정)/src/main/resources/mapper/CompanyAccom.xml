<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CompanyAccomMapper">

    <select id="check" parameterType="String" resultType="CompanyAccom">
        SELECT * FROM com_accom WHERE com_id = #{com_id}
    </select>
    
    <select id="login" parameterType="CompanyAccom" resultType="CompanyAccom">
        SELECT * FROM com_accom WHERE com_id = #{com_id} AND com_password = #{com_password}
    </select>

    <update id="update" parameterType="CompanyAccom">
        UPDATE com_accom
        SET
        com_id=#{com_id}, com_password=#{com_password},
        com_name=#{com_name}, com_phone=#{com_phone}
        WHERE com_accom_code = #{com_accom_code}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM com_accom
        WHERE com_accom_code = #{com_accom_code}
    </delete>

</mapper>
