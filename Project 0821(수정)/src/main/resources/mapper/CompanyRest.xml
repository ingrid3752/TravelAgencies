<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CompanyRestMapper">

    <select id="check" parameterType="String" resultType="CompanyRest">
        SELECT * FROM com_rest WHERE com_id = #{com_id}
    </select>
    
    <select id="login" parameterType="CompanyRest" resultType="CompanyRest">
        SELECT * FROM com_rest WHERE com_id = #{com_id} AND com_password = #{com_password}
    </select>

    <update id="update" parameterType="CompanyRest">
        UPDATE com_rest
        SET
        com_id=#{com_id}, com_password=#{com_password},
        com_name=#{com_name}, com_phone=#{com_phone}
        WHERE com_rest_code = #{com_rest_code}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM com_rest
        WHERE com_rest_code = #{com_rest_code}
    </delete>

</mapper>
