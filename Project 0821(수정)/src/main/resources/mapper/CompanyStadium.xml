<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CompanyStadiumMapper">

    <select id="check" parameterType="String" resultType="CompanyStadium">
        SELECT * FROM com_stadium WHERE com_id = #{com_id}
    </select>
    
    <select id="login" parameterType="CompanyStadium" resultType="CompanyStadium">
        SELECT * FROM com_stadium WHERE com_id = #{com_id} AND com_password = #{com_password}
    </select>

    <update id="update" parameterType="CompanyStadium">
        UPDATE com_stadium
        SET
        com_id=#{com_id}, com_password=#{com_password},
        com_name=#{com_name}, com_phone=#{com_phone}
        WHERE com_stadium_code = #{com_stadium_code}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM com_stadium
        WHERE com_stadium_code = #{com_stadium_code}
    </delete>

</mapper>
