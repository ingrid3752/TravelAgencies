<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.project.mapper.MemInfoMapper">
	<select id="check" parameterType="String" resultType="MemInfo">
		SELECT * FROM mem_info WHERE id = #{id}
	</select>
	
	<select id="login" parameterType="MemInfo" resultType="MemInfo">
		SELECT * FROM mem_info WHERE id = #{id} AND password = #{password}
	</select>
	<insert id="register" parameterType="MemInfo">
		INSERT INTO mem_info
		VALUES(#{id}, #{password}, #{name}, #{phone})
	</insert>
</mapper>
