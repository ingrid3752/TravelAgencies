<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.MemInfoMapper">
	<select id="check" parameterType="String" resultType="MemInfo">
		SELECT * FROM member WHERE id = #{id}
	</select>
	
	<select id="login" parameterType="MemInfo" resultType="MemInfo">
		SELECT * FROM member WHERE id = #{id} AND password = #{password}
	</select>
	<insert id="register" parameterType="MemInfo">
		INSERT INTO member
		VALUES(#{id}, #{password}, #{name}, #{phone})
	</insert>
</mapper>
