<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kh.project.mapper.RestMapper">
    <resultMap id="BaseResultMap" type="com.kh.project.model.Rest">
        <id column="rest_code" property="restCode"/>
        <result column="rest_name" property="restName"/>
        <result column="rest_location" property="restLocation"/>
        <result column="rest_phone" property="restPhone"/>
        <result column="avg_price" property="avgPrice"/>
        <result column="rest_class_code" property="restClassCode"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM rest
    </select>

    <select id="findById" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM rest WHERE rest_code = #{restCode}
    </select>

    <insert id="save" parameterType="com.kh.project.model.Rest">
        INSERT INTO rest (rest_name, rest_location, rest_phone, avg_price, rest_class_code)
        VALUES (#{restName}, #{restLocation}, #{restPhone}, #{avgPrice}, #{restClassCode})
    </insert>

    <update id="update" parameterType="com.kh.project.model.Rest">
        UPDATE rest
        SET rest_name = #{restName}, rest_location = #{restLocation}, rest_phone = #{restPhone}, 
            avg_price = #{avgPrice}, rest_class_code = #{restClassCode}
        WHERE rest_code = #{restCode}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM rest WHERE rest_code = #{restCode}
    </delete>
</mapper>
