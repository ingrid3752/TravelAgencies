<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kh.TravelAgencies.mapper.StadiumMapper">
    <resultMap id="BaseResultMap" type="com.kh.TravelAgencies.model.Stadium">
        <id column="stadium_code" property="stadiumCode"/>
        <result column="stadium_event" property="stadiumEvent"/>
        <result column="game" property="game"/>
        <result column="game_skd" property="gameSkd"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM stadium
    </select>

    <select id="findById" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM stadium WHERE stadium_code = #{stadiumCode}
    </select>

    <insert id="save" parameterType="com.kh.TravelAgencies.model.Stadium">
        INSERT INTO stadium (stadium_event, game, game_skd)
        VALUES (#{stadiumEvent}, #{game}, #{gameSkd})
    </insert>

    <update id="update" parameterType="com.kh.TravelAgencies.model.Stadium">
        UPDATE stadium
        SET stadium_event = #{stadiumEvent}, game = #{game}, game_skd = #{gameSkd}
        WHERE stadium_code = #{stadiumCode}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM stadium WHERE stadium_code = #{stadiumCode}
    </delete>
</mapper>
