<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kh.TravelAgencies.mapper.ThemeParkMapper">
    <resultMap id="BaseResultMap" type="com.kh.TravelAgencies.model.ThemePark">
        <id column="theme_code" property="themeCode"/>
        <result column="location" property="location"/>
        <result column="theme_phone" property="themePhone"/>
        <result column="guide" property="guide"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM theme_park
    </select>

    <select id="findById" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM theme_park WHERE theme_code = #{themeCode}
    </select>

    <insert id="save" parameterType="com.kh.TravelAgencies.model.ThemePark">
        INSERT INTO theme_park (location, theme_phone, guide)
        VALUES (#{location}, #{themePhone}, #{guide})
    </insert>

    <update id="update" parameterType="com.kh.TravelAgencies.model.ThemePark">
        UPDATE theme_park
        SET location = #{location}, theme_phone = #{themePhone}, guide = #{guide}
        WHERE theme_code = #{themeCode}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM theme_park WHERE theme_code = #{themeCode}
    </delete>
</mapper>
